{
	"name": "easy-sml",
	"displayName": "Easy SML",
	"description": "Standard ML environment execution with highlighting, auto-completion, and formatting.",
	"version": "0.0.4",
	"publisher": "yansanity",
	"icon": "demo-media/icon.png",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/vrjuliao/sml-vscode-extension/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vrjuliao/sml-vscode-extension"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"activationEvents": [
		"onCommand:sml-environment.execShortCode",
		"onCommand:sml-environment.execCurrentFile"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "sml-environment.execShortCode",
				"title": "SML Environment: Execute selected code"
			},
			{
				"command": "sml-environment.restart",
				"title": "SML Environment: Restart environment"
			},
			{
				"command": "sml-environment.execCurrentFile",
				"title": "SML Environment: Execute current file"
			},
			{
				"command": "sml-environment.format",
				"title": "SML Environment: format current file"
			}
		],
		"keybindings": [
			{
				"command": "sml-environment.execShortCode",
				"when": "editorLangId =~ /sml/",
				"key": "ctrl+enter",
				"mac": "cmd+enter"
			}
		],
		"grammars": [
			{
				"language": "sml",
				"scopeName": "source.sml",
				"path": "./syntax/sml.tmLanguage.json"
			}
		],
		"formatters": [
			{
				"language": "sml"
			}
		],
		"languages": [
			{
				"id": "sml",
				"aliases": [
					"sml",
					"SML",
					"Standard ML"
				],
				"extensions": [
					".fun",
					".sig",
					".sml",
					".cm",
					".lex",
					".grm"
				],
				"configuration": "./syntax/syntax.json"
			}
		],
		"snippets": [
			{
				"language": "sml",
				"path": "./syntax/sml.json"
			}
		],
		"configuration": {
			"title": "SML Environment",
			"properties": {
				"sml-environment-interpreter-path": {
					"type": "string",
					"title": "SML interpreter path",
					"default": "sml",
					"$comment": "Usually sml or smlnj"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"lodash": "4.17.20"
	}
}